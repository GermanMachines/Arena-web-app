
 {% extends 'base-front.html.twig' %}
{% block body %}

<!-- Page Features -->


<div class="row text-center blog-section spad mx-auto">


{% for participation in equipes %}
 {% for participation in participation.idtournois %}

        <div class="col-lg-3 col-md-6 mb-4 mt-5">
            <div class="card h-100 bg-white text-black border-danger mt-5">
                <img class="card-img-top" src="{{ asset('uploads/' ~ participation.idjeux.imagejeux) }}" alt="">
				
                <div class="card-body">
                 <small class="text-muted">Date Debut: {{ participation.dateDebut ? participation.dateDebut|date('Y-m-d') : '' }} - Date Fin: {{ participation.dateFin ? participation.dateFin|date('Y-m-d') : '' }}</small>

                    <h4 class="card-title font-weight-bold mb-2">
                        {{ participation.titre }}
                    </h4>
                    <ul class="list-group list-group-flush">
                        <p class="list-group-item text-danger">Status: {{ participation.status }}</p>
                        <p class="list-group-item">Max Participants:{{ participation.nbrparticipants }} | Type: {{ participation.type }}</p>
                 <p class="card-text ">{{ participation.descriptiontournois }}</p>    
                             
                    </ul>
                </div>
                <div class="card-footer">
                 <form class="btn btn-danger" method="post" action="{{ path('app_participation_delete', {'idtournois': participation.idtournois}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
			    <button class="btn">Delete</button>
					</form>
                </div>
            </div>
        </div>
     {% endfor %}
 {% endfor %}
</div>

{% endblock %}

