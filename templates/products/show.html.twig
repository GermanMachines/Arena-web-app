{% extends 'base-admin.html.twig' %} {% block title %}Products{% endblock %}{%
    block stylesheets %}
    
    <!-- Custom styles for this template-->
    <link href="{{ asset('admin/css/sb-admin-2.css') }}" rel="stylesheet" />
    
    {% endblock %}
     {% block body %}
<div class="table-wrapper">
  <h1>Product</h1>

  <table class="table">
    <tbody>
      <tr>
        <th>Name</th>
        <td>{{ product.name }}</td>
      </tr>
      <tr>
        <th>Price</th>
        <td>{{ product.price }}</td>
      </tr>
      <tr>
        <th>Qty</th>
        <td>{{ product.qty }}</td>
      </tr>
      <tr>
        <th>Description</th>
        <td>{{ product.description }}</td>
      </tr>
      <tr>
        <th>Image</th>
        <td>
            <img
              src="{{ asset('uploads/' ~ product.image) }}"
              alt=""
              width="100"
              height="100"
            />
        </td>
      </tr>
      <tr>
        <th>Rate</th>
        <td>{{ product.rate }}</td>
      </tr>
    </tbody>
  </table>

  <a href="{{ path('app_products_index') }}">back to list</a>

  <a href="{{ path('app_products_edit', { id: product.id }) }}">edit</a>

  {{ include("products/_delete_form.html.twig") }}
</div>
{% endblock %}
