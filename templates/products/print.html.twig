<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Product Print</title>
    <link href="{{ asset('admin/css/sb-admin-2.css') }}" rel="stylesheet" />
    <link rel="stylesheet" href="{{ asset('front/css/style.css') }}" />
</head>
<body>
<header class="clearfix">
    <div id="logo">
        ARENA
    </div>
    <h1 align="center">ARENA Shop </h1>
    <hr></hr>
    <div class="table-wrapper">
        <h1>Products</h1>
      
        <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Price</th>
              <th>Qty</th>
              <th>Description</th>
              <th>Category</th>
              <th>Image</th>
              <th>Rate</th>
            </tr>
          </thead>
          <tbody>
            {% for product in products %}
            <tr>
              <td>{{ product.name }}</td>
              <td>{{ product.price }}</td>
              <td>{{ product.qty }}</td>
              <td>{{ product.description }}</td>
              <td>{{ product.idcat.name }}</td>
              <td>
                <img
                  src="{{ asset('uploads/' ~ product.image) }}"
                  alt=""
                  width="100"
                  height="100"
                />
              </td>
              <td>{{ product.rate }}</td>
            </tr>
            {% else %}
            <tr>
              <td colspan="8">no products found</td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
</header>
</main>

</body>