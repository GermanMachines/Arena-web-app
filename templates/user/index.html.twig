{% extends 'base-admin.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
 
        <thead>
            <tr>
                <th>Id</th>
                <th>Surnom</th>
                <th>Nom</th>
                <th>Image</th>
                <th>Email</th>
                <th>Mdp</th>
                <th>Telephone</th>
                <th>Role</th>
                <th>Block</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.surnom }}</td>
                <td>{{ user.nom }}</td>
                <td><img src="{{ asset('images/' ~ user.image) }}"
                alt="" width="100" height="100"></td>
                <td>{{ user.email }}</td>
                <td>{{ user.mdp }}</td>
                <td>{{ user.telephone }}</td>
                <td>{{ user.role }}</td>
                <td>{{ user.block }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                    <a class="btn btn-primary" href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a> 
                    <a class="btn btn-primary" href="{{ path('app_user_block', {'id': user.id}) }}">Block</a> 

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
   <!-- <a class="btn btn-primary" href="{{ path('app_user_new') }}">Create new</a> --Âµ>
   
{% endblock %}
