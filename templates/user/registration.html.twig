{% extends 'base-front.html.twig' %}


{% block title %}Inscription{% endblock %}

{% block body %}
<head>
    <title>reCAPTCHA demo: Simple page</title>
    <script src="https://www.google.com/recaptcha/api.js"></script>
<script>
var correctCaptcha = function(response) {
        document.getElementById("myBtn").disabled = false;
    };

</script>
  </head>

<div class =" blog-section spad mx-auto">
<div class="background container" >
<h1>Inscription sur le site</h1>
{{ form_start(form) }}
    {{ form_row(form.username, { 'label':'username', 'attr': {'placeholder':'username...' } }) }}

    {{ form_row(form.nom, { 'label':'Nom d\'utilisateur', 'attr': {'placeholder':'Nom d\'utilisateur...' } }) }}
    {{ form_row(form.surnom, { 'label':'Surnom d\'utilisateur', 'attr': {'placeholder':'Surnom d\'utilisateur...' } }) }}
    {{ form_row(form.email, { 'attr': {  'placeholder': 'Adresse email...' } }  ) }}

    {{ form_row(form.mdp, { 'label':'Mot de passe', 'attr': {'placeholder':'Mot de passe...' } }) }}
    {{ form_row(form.confirmpassword, { 'label':'Répétez votre mot de passe',
                                      'attr':{'placeholder':'Répétez votre mot de passe...' } }) }}
    {{ form_row(form.telephone, { 'label':'telephone', 'attr': {'placeholder':'numero...' } }) }}
    {{ form_row(form.image, { 'label':'image', 'attr': {'placeholder':'image...' } }) }}

    {#{ form_row(form.captchaCode) }#}
          
<div class="g-recaptcha" data-sitekey="6LeIxAcTAAAAAJcZVRqyHh71UMIEGNQ_MXjiZKhI" data-callback="correctCaptcha"></div>

      <br/>
       
  <button type="submit" id="myBtn" disabled class="btn btn-primary">Inscription</button>
 {{ form_end(form) }}
 </div>

<style type="text/css">
:root {
    --container-padding: 20px;
    --container-width: calc(100% - var(--container-padding) * 2);
}
.container {
    box-sizing: border-box;
    width: 100%;
    padding-top: 200px;
    padding-left: calc(50% - var(--container-width) / 2);
    padding-right: calc(50% - var(--container-width) / 2);
}

@media only screen and (min-width: 1040px) {
    :root {
        --container-width: 1000px;
    }
}
</style>
{% endblock %}