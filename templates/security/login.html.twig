{% extends 'base-front.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <section class="login_box_area section_gap">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="login_form_inner">
                        <h3>Log in to enter</h3>
                        {% if error %}
                            <div class="alert alert-danger">
                                Le username et le mot de pass ne sont pas identiques
                            </div>
                        {% endif %}
                        <form action="{{ path('login') }}" method="post" class="row login_form">
                            <div class="col-md-12 form-group">
                                <label>Login</label>
                                <input type="text" placeholder="Username" required name="_username" class="form-control" value="{{ LastUserName }}">
                            </div>
                            <div class="col-md-12 form-group">
                                <label>Password</label>
                                <input type="password" placeholder="Password" required name="_mdp" class="form-control">
                            </div>
                            <div class="col-md-12 form-group">
                                <input type="submit" class="btn btn-primary rounded-3" value="s'identifier">
                            </div>
                        </form>
                        <a href="">mot de passe oubli√© ?</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
