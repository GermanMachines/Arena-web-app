{% extends 'base-front.html.twig' %}

{% block title %}Avis index{% endblock %}

{% block body %}
 <div class =" blog-section spad mx-auto">
<br><br><br><br><br>

    <h1>Avis index</h1>

    <table class="table">
        <thead>
            <tr>

                <th>Score</th>
                <th>Commentaire</th>
                <th>User</th>
                <th>Jeux</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for avi in avis %}
            <tr>
                <td><input id="input-id" type="text" class="rating" data-size="lg" value={{  avi.score }} disabled></td>
                <td>{{ avi.commentaire }}</td>
                <td>{{ avi.idutulisateur.nom }}</td>
                <td>{{ avi.idjeux.nomjeux }}</td>
                      
                <td>
                    <a href="{{ path('app_avis_show_front', {'id': avi.id}) }}" class="btn btn-primary">show</a>
                    <a href="{{ path('app_avis_edit_front', {'id': avi.id}) }}" class="btn btn-secondary" >edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

  </div>
{% endblock %}
