<main id="main" class="main">
    <section class="section">
        <div class="row">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <h1 class="card-title">Ajouter un Jeux</h1>
                        {{ form_start(form,{'attr': {'novalidate': 'novalidate'}}) }}

                        <table >
                            <tr>
                                <td>
                                    {{ form_label(form.nomjeux,"Titre : ") }}
                                </td><td>
                                    {{ form_widget(form.nomjeux) }}
                                </td>
                                <td>{{ form_errors(form.nomjeux,{'attr':{'class':'text-danger'}}) }}</td>
                            </tr>
                            <tr>
                                <td>
                                    {{ form_label(form.imagejeux,"Image : ") }}
                                </td><td>
                                    {{ form_widget(form.imagejeux) }}
                                </td>
                                <td>{{ form_errors(form.imagejeux,{'attr':{'class':'text-danger'}}) }}</td>
                            </tr>

                        </table>
                         <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
                        {{ form_end(form) }}
                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main -->